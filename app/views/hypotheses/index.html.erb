<h1>Listing hypotheses</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Name</th>
      <th>The change</th>
      <th>the impact</th>
      <th>for who</th>
      <th>how much</th>
      <th>how long</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hypotheses.each do |hypothesis| %>
      <tr>
        <td><%= hypothesis.date %></td>
        <td><%= hypothesis.name %></td>
        <td><%= hypothesis.change %></td>
        <td><%= hypothesis.impact %></td>
        <td><%= hypothesis.who %></td>
        <td><%= hypothesis.how_much %></td>
        <td><%= hypothesis.how_long %></td>
        <td><%= link_to 'Show', hypothesis %></td>
        <td><%= link_to 'Edit', edit_hypothesis_path(hypothesis) %></td>
        <td><%= link_to 'Destroy', hypothesis, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

